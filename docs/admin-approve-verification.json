{
  "name": "4. Admin: Approve Verification",
  "request": {
    "method": "PUT",
    "header": [
      {
        "key": "Content-Type",
        "value": "application/json"
      },
      {
        "key": "Authorization",
        "value": "Bearer {{admin_token}}",
        "description": "JWT token from admin sign-in"
      }
    ],
    "body": {
      "mode": "raw",
      "raw": "",
      "options": {
        "raw": {
          "language": "json"
        }
      }
    },
    "url": {
      "raw": "{{base_url}}/admin/doctors/verification/:verificationId/approve",
      "host": [
        "{{base_url}}"
      ],
      "path": [
        "admin",
        "doctors",
        "verification",
        ":verificationId",
        "approve"
      ],
      "variable": [
        {
          "key": "verificationId",
          "value": "YOUR_VERIFICATION_ID_HERE",
          "description": "Verification ID from submit response"
        }
      ]
    },
    "description": "Approve a doctor verification request"
  }
}
